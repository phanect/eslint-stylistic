{
  "name": "@eslint-stylistic/monorepo",
  "type": "module",
  "version": "2.1.0",
  "private": true,
  "packageManager": "pnpm@9.1.0",
  "license": "MIT",
  "scripts": {
    "build": "pnpm -r run build",
    "dev": "pnpm -r --parallel run dev",
    "stub": "pnpm -r --parallel run stub",
    "lint": "eslint . --cache",
    "update": "esno scripts/update.ts && pnpm run lint --fix",
    "publish:ci": "esno scripts/publish.ts",
    "test": "vitest -c vitest.config.unit.ts",
    "test:fixtures": "vitest -c vitest.config.fixtures.ts",
    "check": "pnpm run build && pnpm run update && pnpm run typecheck && pnpm run test --run",
    "typecheck": "vue-tsc --noEmit",
    "prepare": "simple-git-hooks",
    "docs": "pnpm -C docs run docs:dev",
    "docs:build": "pnpm -C docs run docs:build",
    "play:lint": "pnpm -C playground run lint"
  },
  "dependencies": {
    "editorconfig": "^2.0.0"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^2.17.0",
    "@antfu/eslint-define-config": "1.23.0-2",
    "@antfu/ni": "^0.21.12",
    "@antfu/utils": "^0.7.8",
    "@iconify-json/carbon": "^1.1.32",
    "@iconify-json/ri": "^1.1.20",
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@shikijs/twoslash": "^1.5.1",
    "@shikijs/vitepress-twoslash": "^1.5.1",
    "@stylistic/eslint-plugin": "workspace:*",
    "@stylistic/eslint-plugin-js": "workspace:*",
    "@stylistic/eslint-plugin-migrate": "workspace:*",
    "@stylistic/eslint-plugin-plus": "workspace:*",
    "@stylistic/eslint-plugin-ts": "workspace:*",
    "@types/eslint": "^8.56.10",
    "@types/estraverse": "^5.1.7",
    "@types/estree": "^1.0.5",
    "@types/fs-extra": "^11.0.4",
    "@types/js-yaml": "^4.0.9",
    "@types/json-schema": "^7.0.15",
    "@types/node": "^20.12.11",
    "@types/semver": "^7.5.8",
    "@typescript-eslint/parser": "^7.8.0",
    "@typescript-eslint/utils": "^7.8.0",
    "@vitest/coverage-v8": "^1.6.0",
    "@vitest/ui": "^1.6.0",
    "change-case": "^5.4.4",
    "eslint": "^9.2.0",
    "eslint-plugin-format": "^0.1.1",
    "eslint-vitest-rule-tester": "^0.3.2",
    "esno": "^4.7.0",
    "execa": "^9.0.0",
    "fast-glob": "^3.3.2",
    "fs-extra": "^11.2.0",
    "gray-matter": "^4.0.3",
    "jiti": "^1.21.0",
    "js-yaml": "^4.1.0",
    "json-schema": "^0.4.0",
    "json-schema-to-typescript": "^14.0.4",
    "lint-staged": "^15.2.2",
    "pnpm": "^9.1.0",
    "rimraf": "^5.0.5",
    "rollup": "^4.17.2",
    "rollup-plugin-dts": "^6.1.0",
    "rollup-plugin-esbuild": "^6.1.1",
    "semver": "^7.6.1",
    "shiki": "^1.5.1",
    "simple-git-hooks": "^2.11.1",
    "taze": "^0.13.8",
    "tsx": "^4.9.3",
    "twoslash-eslint": "^0.2.6",
    "typescript": "^5.4.5",
    "unbuild": "^2.0.0",
    "vite": "^5.2.11",
    "vitest": "^1.6.0",
    "vue": "^3.4.27",
    "vue-tsc": "^2.0.16"
  },
  "resolutions": {
    "rollup": "^4.17.2",
    "twoslash-eslint": "^0.2.6",
    "unbuild": "^2.0.0",
    "vite": "^5.2.11",
    "vitest": "^1.6.0",
    "vue": "^3.4.27",
    "vue-tsc": "^2.0.16"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*": "eslint --fix"
  }
}
